{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":semanticCommits"
  ],
  "labels": [
    "dependencies",
    "filigran team"
  ],
  "minimumReleaseAge": "3 days",
  "prHourlyLimit": 2,
  "timezone": "Europe/Paris",
  "schedule": [
    "* 0-4,22-23 * * 1-5",
    "* * * * 0,6"
  ],
  "updateNotScheduled": false,
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "description": "Disable updates of images intentionally pinned to older versions for compatibility testing",
      "matchFileNames": [
        "^\\.drone\\.yml$"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "python"
      ],
      "matchCurrentVersion": "^3\\.(9|10|11|12)$",
      "enabled": false
    },
    {
      "matchDatasources": [
        "npm",
        "node-version"
      ],
      "commitMessagePrefix": "[frontend] chore(deps):"
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "commitMessagePrefix": "[backend] chore(deps):"
    },
    {
      "matchDatasources": [
        "docker",
        "orb"
      ],
      "commitMessagePrefix": "[tool] chore(deps):"
    },
    {
      "groupName": "devDependencies (non-major)",
      "groupSlug": "dev-dependencies-non-major",
      "description": "Batch auto merge and batch on sunday morning, non-major update of dev dependencies once a week (Sunday 03:00)",
      "schedule": "* 3 * * 0",
      "matchDepTypes": [
        "devDependencies"
      ],
      "commitMessagePrefix": "[DANGER]",
      "commitMessageSuffix": "(html-to-image has a yarn patch)"
    },
    {
      "matchJsonata": [
        "$exists(isVulnerabilityAlert)"
      ],
      "matchBaseBranches": [
        "release/current"
      ],
      "enabled": false
    },
    {
      "matchJsonata": [
        "$not($exists(isVulnerabilityAlert))"
      ],
      "matchBaseBranches": [
        "master"
      ],
      "enabled": false
    }
  ]
}
